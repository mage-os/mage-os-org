---
import Item from '~/components/blog/GridItem.astro';
import type { Post } from '~/types';

export interface Props {
  posts: Array<Post>;
}

const { posts } = Astro.props;

// Adjust grid columns based on post count
const gridCols = posts.length === 3 ? 'lg:grid-cols-3' : 'lg:grid-cols-4';
---

<div class={`grid gap-6 row-gap-5 md:grid-cols-2 ${gridCols} -mb-6`} role="list" aria-label="Blog posts">
  {posts.map((post) => <Item post={post} />)}
</div>
